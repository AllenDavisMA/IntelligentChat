page{
  background-color: rgb(247, 247, 247);
}

.header{
  text-align: center;
  font-size: 20px;
  font-weight: 650;
  font-family: Microsoft YaHei;
  font-weight: bold;
  margin:5px;
}

.line {
  font-size: 22px;
  border-bottom: solid 1px #ccc;
  line-height: 0.9;
  margin-top: 5px;
}
.notebook{
  width: 100%;
}
.notebook .title{
  margin-top: 8px;
  margin-left: 8px;
  font-size: 14px;
  font-weight: 700;
  font-family: Microsoft YaHei;
  color: rgb(240, 92, 24);
}
.notebook .contents{
  display: flex;
}
.notebook .contents .date{
  margin-top: 3px;
  margin-left: 10px;
  font-size: 13px;
  color: rgb(151, 150, 150);
  font-family: Microsoft YaHei;
}
.notebook .contents .content{
  margin-top: 3px;
  margin-left: 5px;
  font-size: 14px;
  color: rgb(26, 25, 25);
  font-family: Microsoft YaHei;
}
.footer{
  width: 100%;
  height: 20px;
  display: flex;
  position: fixed;
  bottom: 50px;
  align-items: center;
}
.footer .num{
  position: absolute;
  left: 300rpx;
  font-size: 10px;
  color: rgb(41, 40, 40);
  font-weight: 600;
  font-family: Microsoft YaHei;
}
.footer .edit{
  position: absolute;
  right: 30rpx;
  bottom: 10rpx;
}
.footer .edit image{
  width: 45px;
  height: 45px;
}

.van-swipe-cell__right {
  display: inline-block;
  width: 65px;
  height: 44px;
  font-size: 15px;
  line-height: 44px;
  color: #fff;
  text-align: center;
  background-color: #f44;
}

